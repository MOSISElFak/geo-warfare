<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenu</item>
        <!-- textColorTertiary changes TextView text color -->
        <item name="android:textColorTertiary">@color/colorPrimary</item>
        <item name="richTextViewDrawableStyle">@style/StructureUnitIconAndCount</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"/>
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"/>



    <style name="PrimaryButton" parent="Theme.AppCompat">
        <item name="android:tint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="PrimaryLightButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorPrimaryLight</item>
    </style>

    <style name="AccentButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:tint">@color/colorPrimaryDark</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="InfoBarIcon">
        <item name="android:layout_width">@dimen/info_bar_icon_size</item>
        <item name="android:layout_height">@dimen/info_bar_icon_size</item>
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="InfoBarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/info_bar_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minEms">1</item>
        <item name="android:maxEms">4</item>
    </style>
    
    <style name="StructureUnitIconAndCount">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/structure_unit_icon_padding</item>
        <!--<item name="android:gravity">start|center_vertical</item>-->
        <item name="android:ems">4</item>
        <!-- These compoundDrawableWidth/Height and drawableTint (without android: prefix)
             are from the custom TextViewRichDrawable view -->
        <item name="compoundDrawableWidth">@dimen/structure_fragment_icon_size</item>
        <item name="compoundDrawableHeight">@dimen/structure_fragment_icon_size</item>
        <item name="drawableTint">@color/colorPrimaryDark</item>
    </style>

    <style name="StructureUnitCountEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:inputType">number</item>
        <item name="android:ems">3</item>
        <item name="android:hint">0</item>
    </style>

</resources>

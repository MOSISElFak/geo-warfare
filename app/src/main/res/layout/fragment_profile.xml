<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="rs.elfak.jajac.geowarfare.fragments.ProfileFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="184dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@color/colorPrimary"
        android:id="@+id/imageView4"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.0"/>


    <ImageView
        android:id="@+id/profile_fragment_avatar"
        android:layout_width="136dp"
        android:layout_height="136dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/default_avatar"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/profile_fragment_display_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Zantsu"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toRightOf="@+id/profile_fragment_avatar"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/profile_fragment_avatar"
        android:fontFamily="sans-serif-light"
        android:textSize="18sp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/profile_fragment_full_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Milos Jajac"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="sans-serif-light"
        android:textSize="32sp"
        android:textAlignment="center"/>

</android.support.constraint.ConstraintLayout>

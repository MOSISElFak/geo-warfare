<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rs.elfak.jajac.geowarfare.fragments.ProfileFragment">

    <ImageView
        android:id="@+id/profile_fragment_top_background"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/profile_fragment_display_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/profile_display_name_horizontal_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="@dimen/profile_display_name_horizontal_margin"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/profile_display_name_vertical_margin"
        app:layout_constraintBottom_toTopOf="@+id/profile_fragment_avatar_image"
        tools:text="Placeholder"
        android:textSize="@dimen/profile_display_name_text_size"
        android:textAlignment="center"
        android:textColor="@android:color/white"/>

    <ImageView
        android:id="@+id/profile_fragment_avatar_image"
        android:layout_width="@dimen/profile_avatar_size"
        android:layout_height="@dimen/profile_avatar_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_fragment_top_background"
        app:layout_constraintBottom_toBottomOf="@+id/profile_fragment_top_background"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:background="@drawable/imageview_border"/>

    <TextView
        android:id="@+id/profile_fragment_full_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/profile_display_name_horizontal_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="@dimen/profile_display_name_horizontal_margin"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/profile_display_name_vertical_margin"
        app:layout_constraintTop_toBottomOf="@+id/profile_fragment_avatar_image"
        tools:text="Daenerys Targaryen"
        android:fontFamily="sans-serif-light"
        android:textSize="@dimen/profile_display_name_text_size"
        android:textAlignment="center"/>

    <LinearLayout
        android:id="@+id/profile_fragment_friend_request_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_fragment_full_name"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivider"
            android:layout_marginBottom="@dimen/profile_divider_margin"/>

        <Button
            android:id="@+id/profile_fragment_friend_request_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivider"
            android:layout_marginTop="@dimen/profile_divider_margin"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="rs.elfak.jajac.geowarfare.fragments.ProfileFragment">

    <ImageView
        android:id="@+id/profile_fragment_avatar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/profile_fragment_display_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/profile_fragment_avatar"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_fragment_avatar"
        tools:text="Danny13"
        android:textSize="36sp"
        android:textColor="@android:color/white"
        android:shadowColor="@color/colorPrimaryDark"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="4"
        android:layout_marginStart="24dp"/>

    <TextView
        android:id="@+id/profile_fragment_full_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_fragment_avatar"
        tools:text="Daenerys Targaryen"
        android:fontFamily="sans-serif-light"
        android:textSize="32sp"
        android:textAlignment="center"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>

</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/structure_header_background_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/structure_header_background_height"
        app:srcCompat="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/structure_header_icon_img"
        android:layout_width="@dimen/structure_icon_size"
        android:layout_height="@dimen/structure_icon_size"
        android:layout_marginStart="@dimen/structure_icon_text_margin"
        app:layout_constraintLeft_toLeftOf="@+id/structure_header_background_img"
        app:layout_constraintTop_toTopOf="@+id/structure_header_background_img"
        app:layout_constraintBottom_toBottomOf="@id/structure_header_background_img"
        android:src="@drawable/ic_gold_cart"
        android:tint="@android:color/white"/>

    <LinearLayout
        android:id="@+id/structure_header_level_container"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:orientation="horizontal"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/structure_header_icon_img"
        app:layout_constraintLeft_toRightOf="@id/structure_header_icon_img">

        <!-- We dynamically insert stars like the one here -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_star_24dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_star_24dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_star_24dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/structure_header_type"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/structure_type_text_size"
        app:layout_constraintLeft_toLeftOf="@+id/structure_header_level_container"
        app:layout_constraintBottom_toBottomOf="@+id/structure_header_icon_img"
        android:includeFontPadding="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/structure_type_text_size"
        tools:text="Gold mine"/>

    <ImageView
        android:id="@+id/structure_header_owner_avatar_img"
        android:layout_width="@dimen/structure_icon_size"
        android:layout_height="@dimen/structure_icon_size"
        android:layout_marginEnd="@dimen/structure_icon_text_margin"
        app:layout_constraintRight_toRightOf="@+id/structure_header_background_img"
        app:layout_constraintTop_toTopOf="@+id/structure_header_background_img"
        app:layout_constraintBottom_toBottomOf="@id/structure_header_background_img"
        tools:src="@drawable/default_avatar"/>

    <TextView
        android:id="@+id/structure_header_owner_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/structure_header_owner_avatar_img"
        app:layout_constraintTop_toTopOf="@+id/structure_header_owner_avatar_img"
        android:layout_marginEnd="@dimen/structure_icon_text_margin"
        android:includeFontPadding="false"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:textSize="@dimen/structure_owner_name_text_size"
        tools:text="Daenerys"/>

</android.support.constraint.ConstraintLayout>
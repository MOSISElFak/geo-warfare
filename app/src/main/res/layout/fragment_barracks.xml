<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="rs.elfak.jajac.geowarfare.fragments.BarracksFragment">

    <FrameLayout
        android:id="@+id/fragment_barracks_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragment_barracks_info_container"
        android:scrollbarStyle="outsideOverlay">

        <!-- PURCHASE & UPGRADE & DEFENSE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"
            android:orientation="vertical">

            <!-- PURCHASE -->
            <TextView
                android:id="@+id/fragment_barracks_purchase_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/structure_section_title_top_margin"
                android:layout_marginBottom="@dimen/structure_section_title_bottom_margin"
                android:layout_gravity="center"
                android:textSize="@dimen/structure_section_title_size"
                android:text="@string/barracks_purchase_title"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/fragment_barracks_purchase_items_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <!-- dinamically inserted items for each unit here -->

                </LinearLayout>

                <Button
                    android:id="@+id/fragment_barracks_purchase_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/ic_coin_stack"
                    android:theme="@style/AccentButton"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/structure_section_divider_top_margin"
                android:background="@color/colorDivider"/>

            <!-- UPGRADE -->
            <TextView
                android:id="@+id/fragment_barracks_upgrade_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/structure_section_title_top_margin"
                android:layout_marginBottom="@dimen/structure_section_title_bottom_margin"
                android:layout_gravity="center"
                android:textSize="@dimen/structure_section_title_size"
                android:text="@string/structure_upgrade_title"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <!-- CURRENT LEVEL -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/structure_upgrade_current_label"/>

                        <LinearLayout
                            android:id="@+id/fragment_barracks_current_level_items_container"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal" />

                    </LinearLayout>

                    <!-- NEXT LEVEL -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/structure_upgrade_label_vertical_margin"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/structure_upgrade_next_label"/>

                        <LinearLayout
                            android:id="@+id/fragment_barracks_next_level_items_container"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal" />

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/fragment_barracks_upgrade_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/ic_coin_stack"
                    android:theme="@style/AccentButton"/>

            </LinearLayout>

            <!-- DEFENSE -->
            <FrameLayout
                android:id="@+id/fragment_barracks_defense_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

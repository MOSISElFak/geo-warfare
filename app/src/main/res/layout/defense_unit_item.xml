<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:baselineAligned="false">

     <!--We will set the drawableLeft and text in code-->
    <com.tolstykh.textviewrichdrawable.TextViewRichDrawable
        android:id="@+id/defense_item_unit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/StructureUnitIconAndCount"
        tools:text="75"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/defense_item_transfer_count"
            style="@style/UnitCountEditText"
            tools:text="50"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/purchase_item_multiply_horizontal_margin"
            android:layout_marginEnd="@dimen/purchase_item_multiply_horizontal_margin"
            android:text="@string/multiplication_sign"/>

        <ImageView
            android:id="@+id/defense_item_transfer_icon"
            android:layout_width="@dimen/structure_unit_icon_size"
            android:layout_height="@dimen/structure_unit_icon_size"
            tools:src="@drawable/ic_sword"/>

    </LinearLayout>

</LinearLayout>
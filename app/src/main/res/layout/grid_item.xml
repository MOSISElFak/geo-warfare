<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <rs.elfak.jajac.geowarfare.utils.SquareImageButton
        android:id="@+id/grid_item_image_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40dp"
        android:background="@drawable/build_button_selector"
        android:tint="@android:color/white"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/grid_item_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:textAlignment="center"
        android:paddingTop="4dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"/>

    <RelativeLayout
        android:id="@+id/grid_item_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="8dp"
        android:background="@color/colorPrimaryDark"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/grid_item_cost_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_coin_stack"
            android:tint="@color/colorAccent"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</FrameLayout>
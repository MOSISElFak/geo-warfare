<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="start|center_vertical"
    android:layout_marginEnd="@dimen/info_bar_icon_left_margin">

    <ImageView
        android:id="@+id/info_bar_units_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/info_bar_icon_text_margin"
        style="@style/InfoBarIcon"/>

    <TextView
        android:id="@+id/info_bar_units_item_count"
        android:layout_width="@dimen/info_bar_units_item_text_width"
        android:includeFontPadding="false"
        style="@style/InfoBarText"/>

</LinearLayout>